<!doctype html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/header') %>
    <%- include('../partials/navbar') %>
 
    <div class="bg-light pt-3 pb-3 main" id="main">
        <div class="wrapper mx-auto">
            <a href="../login" class="subtitle"><h1 class="mt-3 mb-3">Login</h1></a>
            <div class="alert-div">
              <%- include('../partials/alert') %>
          </div>
            <div class="text-left form-group mt-3">
              <form action="../login" id="login-form" name="login-form" method="POST">
                <input type="text" name="email" class="form-control mx-auto login-input" id="email" placeholder="e-mail">
            </div>
            <div class="text-left form-group mt-3 ">
                <input type="password" name="password" class="form-control mx-auto login-input" id="password" placeholder="password">
            </div>
            <button type="submit" class="btn btn-secondary font-weight-bold mb-3 login-btn">OK</button>
          </form>
          </div>
    </div>
   
    <%- include('../partials/footer') %>

  </body>
</html>