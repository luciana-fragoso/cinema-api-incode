<!doctype html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/header') %>
    <%- include('../partials/navbar') %>
    
    <div class="bg-light pt-3 pb-3 main">
        <form action="../signup" method="POST">
        <div class="wrapper mx-auto">
            <a href="#" class="subtitle"><h2 class="mt-3 mb-3">Sign up</h2></a>
            <div class="alert-div">
                <%- include('../partials/alert') %>
            </div>
            <div class="sign-up-div">
                <div class="text-left form-group mr-3 ml-3">
                    <input type="text" class="form-control signup-input" id="email" name="email" placeholder="e-mail">
                </div>
                <div class="text-left form-group mr-3 ml-3">
                    <input type="password" class="form-control signup-input" id="password" name="password" placeholder="password">    
                </div>
            
                
                <div class="text-left form-group mr-3 ml-3">
                    <input type="text" class="form-control signup-input" id="name" name="name" placeholder="name">
                </div>
                <div class="text-left form-group mr-3 ml-3">
                    <input type="password" class="form-control signup-input" id="confirm" name="confirm" placeholder="confirm password">
                </div>
            </div>
            <div class="mx-auto text-center password-div" id="rules-id" data-toggle="popover">
              <p>Check password rules</p>
            </div> 
                
            <div id="rules-content" class="d-none">
                <ul class="p-0">
                    <li>- Must have at least 1 digit</li>
                    <li>- Betweeen 8 and 30 characteres</li>
                    <li>- Must have at least 1 upper and lower case</li>
                </ul>
            </div> 
            <script>
                $(document).ready(function(){
                    $("[data-toggle=popover]").popover({
                        "placement": 'bottom' 
                        ,"trigger" : 'click'
                        , "html": true
                        , "container": 'body'
                        , "sanitize" : false
                        ,"content": function() {
                            return $('#rules-content').html();
                        }
                        }); 

                        
                $(document).mouseup(function(e) {
                    var container = $("[data-toggle=popover]");
                        if (!container.is(e.target) && container.has(e.target).length === 0) {
                            $('[data-toggle=popover]').popover('hide');
                    }});
                
                    $(window).on('wheel', function(event){
                    $('[data-toggle=popover]').popover('hide');
                });

            });
            </script>          
           
            <button type="submit" class="btn btn-secondary font-weight-bold mt-3 mb-3 login-btn">OK</button>
        </div>
        
</form>
    </div>
       
       
    
    <%- include('../partials/footer') %>

  </body>
</html>